generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Matchs {
  id        Int    @id @default(autoincrement())
  categorie String
  equipe1   String
  equipe2   String
  score1    Int?
  score2    Int?

  @@unique([categorie, equipe1, equipe2])
  @@map("matchs") // <-- force Prisma Ã  utiliser une table `matchs` en minuscules
}
